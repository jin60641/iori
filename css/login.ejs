body {
	background-image : url('/svg/back.svg');
	background-size : 100% 100%;
	height : 100vh;
	overflow-y : hidden;
}

#body {
	margin-top : 0;
}

#wrap_top {
	height : 100vh;
	text-align : center;
}

#head {
	display : none;
}

#helper {
	display : inline-block;
	height : 100vh;
	vertical-align : middle;
}

#form {
	vertical-align : middle;
	text-align : left;
	width : 100vw;
	background-color : white;
	box-sizing : border-box;
	max-width : 400px;
	display : inline-block;
	padding : 50px;
    -webkit-box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.2);
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.2);
	font-size : 10pt;
}

#form label, #form input {
	margin : auto;
	margin-bottom : 10px;
	display : block;
	width : 100%;
	box-sizing : border-box;
}

#form input {
	margin-top : 13px;
	margin-bottom : 40px;
	padding-bottom : 7px;
    border : 0;
    border-bottom : 1px solid #ccc;
	transition : border-bottom .2s linear;
}

#form input:focus {
    border-bottom : 1px solid <%= color_hex %>;
}

#form #form_auto_login {
	margin-top : 0px;
	display : inline-block;
	cursor : pointer;
	padding-top : 2px;
	vertical-align : middle;
	margin-bottom : 3px;
//	background-position : left;
//	background-repeat : no-repeat;
	width : auto;
	width : initial;
}
#form #form_auto_login_label {
	cursor : pointer;
	margin-left : 4px;
	display : inline-block;
	width : auto;
	width : initial;
}

#form .form_btn {
	text-align : center;
	width : 100%;
	color : white;
	font-size : 14pt;
	padding-top : 10px;
	padding-bottom : 10px;
	cursor : pointer;
}

#form #form_login_btn {
	background-color : rgba(<%= color_r %>,<%= color_g %>,<%= color_b %>,0.9);
}
#form #form_login_btn:hover {
	background-color : rgb(<%= color_r %>,<%= color_g %>,<%= color_b %>);
}

#form #form_facebook_btn {
	background-color : #537bbd;
	margin-bottom : 30px;
}

#form #form_google_btn {
	background-color : #ff0000;
	margin-bottom : 30px;
}


#form #form_facebook_btn img{
	vertical-align : top;
	margin-top : 1px;
	margin-right : 10px;
}

#form #form_facebook_btn:hover {
	background-color : #2e4f84;
}

#form text {
	display : block;
	margin-top : 10px;
	margin-bottom : 10px;
}

#form #form_alert {
	color : #ce410a;
	opacity : 0;
	margin-top : 8px;
	margin-bottom : 10px;
}

#form text a {
	color : #ce410a;
	margin-left : 10px;
}


@media screen and ( max-width : 669px ){
	body {
		background : white;
	}
	#form {
		box-shadow : none;
	}
}
