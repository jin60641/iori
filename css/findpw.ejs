<style>
#form {
	text-align : left;
	width : 100vw;
	box-sizing : border-box;
	padding-top : 60px;
	max-width : 370px;
	display : block;
	margin : auto;
	font-size : 10pt;

}
#form label, #form input {
	margin : auto;
	margin-bottom : 10px;
	display : block;
	width : 100%;
	box-sizing : border-box;
}

#form input {
	margin-bottom : 40px;
	padding : 10px;
}

#form .form_btn {
	text-align : center;
	width : 100%;
	color : white;
	font-size : 14pt;
	padding-top : 10px;
	padding-bottom : 10px;
	cursor : pointer;
}

#form #form_submit_btn {
	background-color : rgba(<%= color_r %>,<%= color_g %>,<%= color_b %>,0.9);
}
#form #form_submit_btn:hover {
	background-color : rgb(<%= color_r %>,<%= color_g %>,<%= color_b %>);
}

#form #form_facebook_btn {
	background-color : #537bbd;
}

#form text {
	display : block;
	margin-top : 10px;
	margin-bottom : 10px;
}

#form #form_alert {
	color : #ce410a;
	opacity : 0;
	margin-top : 8px;
	margin-bottom : 10px;
}

#form text a {
	color : #ce410a;
	margin-left : 10px;
}

</style>
