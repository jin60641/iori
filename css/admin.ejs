<style>
#wrap3 {
	display : none;
}

#admin_wrap {
	width : calc( 100vw - 350px );
	min-height : calc( 100vh - 80px );
	box-sizing : border-box;
	padding-left : 10px;
	padding-right : 10px;
}

#wrap2 #admin_box {
	border: 1px solid #e6ecf0;
	min-height : calc( 100vh - 80px );
	background-color : white;
	margin-bottom : 10px;
}

#wrap2 #admin_table {
	position : relative;
	box-sizing : border-box;
	width : calc( 100% - 20px );
	
	margin : 10px 0 10px 10px;
	padding : 0px;
	display : block;
	border-radius : 0 0 4px 4px;
	border-collapse : collapse;
//	height : calc( 100vh - 126px );
	overflow-x : auto;
	overflow-y : hidden;
}

#wrap2 #admin_table .admin_table_flip {
	cursor : pointer;
	color : #ccc;;
}

#wrap2 #admin_table  > .admin_table_tr > .admin_table_th {
	background-color : #f3f3f3;
	position : relative;
}


#wrap2 #admin_table  > tr > th > .admin_table_resizer {
	position : absolute;
	right : 1px;
	top : 0px;
	cursor : col-resize;
	width : 4px;
	height : 28px;
	background-color : #AAAABB;
	background-size : 4px 28px;
	opacity : 0;
}

#wrap2 #admin_table  > tr > th > #admin_table_resizer_clicked {
}

#wrap2 #admin_table  > tr > th > #admin_table_resizer_clicked div {
	width : 3px;
	border-right : 1px dotted black;
}

#wrap2 #admin_table  > tr > th > .admin_table_resizer:hover {
	opacity : 1;
}

#wrap2 #admin_table  > .admin_table_tr > * {
	border : 1px solid #ccc;
	overflow : hidden;
	height : 28px;
	box-sizing : border-box;
	padding : 2px 8px 2px 5px;
}

#wrap2 #admin_table  > .admin_table_tr > .admin_table_td > div {
	max-width : 76px;
	white-space : nowrap;
	padding : 0px;
	margin : 0px;
	max-height : 28px;
}

#wrap1 #admin_tab {
    border-bottom : 1px solid #e5e6e9;
    border-radius : 4px;
}

#admin_tab > div {
    background-color : white;
    border : 1px solid #dfe0e4;
    border-color : #e5e6e9 #dfe0e4 #e5e6e9;
	border-bottom : 0;
    padding : 12px;
    color : #66757f;
    font-size: 14px;
}

#wrap2 #admin_tab > div {
    display : inline-block;
    width : 90px;
    box-sizing : border-box;
    text-align : center;
	border-left : 0;
	border-top : 0;
}

#wrap2 #admin_tab > div:last-of-type {
    border-right : 1px #dfe0e4 solid;
}

#wrap1 #admin_tab > div:first-of-type {
    border-radius : 4px 4px 0 0;
}

#wrap1 #admin_tab > div:last-of-type {
    border-radius : 0px 0px 4px 4px;
}

#wrap1 #admin_tab > div:hover {
    cursor : pointer;
    background-color : #f6f6f6;
    color : <%= color_hex %>;
}

#admin_tab > .admin_tab_active {
    color : black;
    font-weight : bold;
}

#admin_title {
    border-bottom : 1px solid #e6ecf0;
    font-size : 22px;
    padding : 11px;
	background-color : white;
	width : 100%;
	box-sizing : border-box;
}

#admin_limit {
	width : 35px;
	padding-left : 2px;
	margin-left : 10px;
	margin-right : 5px;
	margin-top : 10px;
}

.admin_btn {
	display : inline-block;
	margin-left : 15px;
}

#pages_max {
	display : none;
}

.pages_btn {
	display : inline-block;
	padding : 8px;
}

.pages_num {
	padding : 8px;
}

#current_page {
	color : red;
}

@media screen and ( max-width : 1000px ) {
    #admin_title {
        display : none;
    }
	#admin_wrap {
		width : calc( 100vw - 30px );
	}
}
</style>
