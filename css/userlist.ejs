.user_list_div {
    position : relative;
    display : inline-block;
    background-color : white;
    margin-bottom : 10px;
    width : 310px;
    border-radius : 4px;
	border : 1px solid;
	border-color: #e5e6e9 #dfe0e4 #d0d1d5;
	padding-bottom : 15px;
	margin-right : 10px;
	transition : opacity .2s ease-in;
}

.user_list_div .user_list_header {
	display : block;
    text-align : center;
    color : #202020;
    height : 100px;
    background-color : <%= color_hex %>;
    background-size : cover;
    background-position : center center;
    background-clip : content-box;
    font-size : 18px;
    width : 100%;
    cursor : pointer;
	border-radius : 4px 4px 0 0;
	border-bottom : 1px solid rgba(0,0,0,0.1);
}

.user_list_div .user_list_profile {
	display : block;
    width : 100px;
    height : 100px;
    border-radius : 50%;
	background-color : white;
    background-size : cover;
    background-clip : content-box;
    border : 4px solid white;
    position : absolute;
    cursor : pointer;
    top : 50px;
    left : 8%;
}


.user_list_div .user_list_text {
	margin-top : 65px;
}
.user_list_div .user_list_text_self {
	float : right;
	width : 58%;
	margin-top : 7px;
}

.user_list_div .user_list_name {
	display : block;
    padding-left : 8%;
    font-size : 13pt;
    cursor : pointer;
    font-weight : bold;
	text-decoration : none;
	color : black;
}

.user_list_div .user_list_name:hover {
	text-decoration : underline;
}

.user_list_div .user_list_uid {
    padding-left : 8%;
	text-decoration : none;
    font-size : 12px;
    color : #66757f;
	display : inline-block;
}

.user_list_div .user_list_uid:hover {
	text-decoration : underline;
}

.user_list_div .user_list_follower {
	display : inline-block;
	margin-left : 6px;
	color : #8899a6;
	font-size : 11px;
}

.user_list_info {
	margin-top : 72px;
	text-align : center;
	display : block;
	width : 100%;
}

.user_list_info .user_list_tab {
	display : inline-block;
	width : 100px;
	text-decoration : none;
	transition : color .1s ease-in-out;
}

.user_list_info .user_list_tab:hover, .user_list_info .user_list_tab:hover .user_list_tab_name {
	color : <%= color_hex %>;
}

.user_list_info .user_list_tab .user_list_tab_name {
	color : #657786;
	font-size : 12px;
}

.user_list_info .user_list_tab .user_list_tab_value {
	color : <%= color_hex %>;
	font-size : 16px;
	font-weight : bold;
}
