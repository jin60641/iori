
textarea {
	-webkit-appearance : none;
}

#post_wrap {
	overflow-y : hidden;
	width : 650px;
	box-sizing : border-box;
	max-width : 100vw;
	display : block;
	padding-bottom : 10px;
}

#post_wrap > .post {
	//box-shadow : 2px 2px 3px rgba(0,0,0,0.05);
	//white-space : pre;
	margin : auto;
	box-sizing : border-box;
	width : 100%;
	font-family : inherit;
	word-wrap : break-word;
	background-color : white;
	position : relative;
	font-size : 13px;
	letter-spacing : 0px;
	border : 1px solid;
	border-color : #e5e6e9 #dfe0e4 #d0d1d5;
	border-radius : 3px;
	padding : 10px;
	display : block;
	margin-bottom : 10px;
	transition : opacity .3s linear;
	text-decoration : none;
}

#post_wrap .post #post_write {
	//margin-left : 4px;
	padding-top : 10px;
	border-top : 1px solid rgba(0,0,0,0.2);
	border-bottom : 1px solid rgba(0,0,0,0.2);
	border-left : 0px;
	border-right : 0px;
	border-radius : 0px;
	overflow-y : hidden;
	display : block;
	font-size : 14px;
	margin : 0px 4px 0px 4px;
	width : 100%;
	height : 100px;
	vertical-align : top;
	padding-left : 3px;
	transition : border-top .1s linear, border-bottom .1s linear;
	box-sizing : border-box;
}

#post_wrap > .post > .post_name {
	color : <%= color_hex %>;
	text-decoration : none;
	font-size : 18px;
	font-weight : bold;
	letter-spacing : -2px;
	font-family : inherit;
}

#post_wrap > #write {
	padding-bottom : 50px;
}

.post .post_share {
	width : 0px;
	white-space : nowrap;
	font-size : 12px;
	color : #657786;
	display : block;
	margin-left : 63px;
	text-decoration : none;
}

.post .postimg_preview {
	border-radius : 3px;
	margin-top : 10px;
	overflow : hidden;
	max-width : 100%;
	display : inline-block;
	border : 1px solid #e1e2e3;
}

.post .postimg_img {
	max-height : 600px;
	display : block;
	max-width : 100%;
	-moz-transition : all 0.3s;
	-webkit-transition : all 0.3s;
	transition : all 0.3s;
	cursor : pointer;
}

.post .postimg_img:hover {
	transform : scale(1.1);
}

.post > .date {
	position : relative;
	letter-spacing : -1px;
	font-size : 16px;
}

.post > .date::before {
	content : " | ";
}

#post_wrap .date {
	line-height : 22px;
	color : #9197a3;
}

#post_wrap .date img {
	position : absolute;
	top : -3px;
	right : -2px;
	filter : grayscale(100%);
	-webkit-filter : grayscale(100%);
	display : inline;
}

.reply .date {
	font-size : 12px;
}


.reply .writereply {
	border : 1px solid #c8c8c8;
	letter-spacing : 0.5px;
	margin-left : 11px;
	width : calc( 100% - 90px );
	margin-top : 1px;
	height : 15px;
	overflow : hidden;
	padding : 9px 34px 9px 5px;
}

#post_wrap .writereply:focus {
	outline : 0;
}


.replyinput_label {
	position : absolute;
	right : 8px;
	display : none;
	width : 23px;
	height : 23px;
	top : 7px;
	background : url('/img/imageupload_reply.png') right no-repeat;
	background-size : 23px 23px;
}

.writereply:hover + .replyinput_label {
	display:block;
} 

.writereply:focus + .replyinput_label {
	display : block;
} 

.replyinput_label:hover {
	cursor : pointer;
	display : block;
}


.post > .postmenubtn {
	background : url('/svg/dropdown.svg');
	position : absolute;
	right : 10px;
	top : 10px;
	font-size : 12px;
	background-size : 17px 17px;
	width : 17px;
	height : 17px;
}

.post > .postmenubtn:hover {
	cursor : pointer;
}

#post_wrap .post #post_write:focus {
	outline : 0;
	border-top : 1px solid <%= color_hex %>;
	border-bottom : 1px solid <%= color_hex %>;
}

#post_wrap .post #post_file_label {
	margin-right : 14px;
	margin-top : 8px;
	width : 32px;
	height : 33px;
	float : right;
	background : url('/svg/imageupload.svg');
	background-size : 32px 33px;
}

#post_wrap .post #post_file_label:hover {
	cursor : pointer;
}

#output_post {
	width : 100%;
	white-space : nowrap;
	height : auto;
	overflow-y : hidden;
	margin-bottom : 0px;
}
#output_post::-webkit-scrollbar {
	height : 5px;
}
.post_imgbox {
	padding : 3px;
	margin-top : 10px;
	border : 2px solid <%= color_hex %>;;
	width : 82px;
	height : 82px;
	margin-left : 4px;
	margin-right : 5px;
	position : relative;
	display : inline-block;
}

.delete_postimg {
	cursor : pointer;
	background : url('/svg/deletebtn.svg') no-repeat;
	background-color : white;
	background-size : 18px;
	top : 3px;
	right : 3px;
	width : 18px;
	height : 18px;
	position : absolute;
	display : none;
}

.post_imgbox:hover .delete_postimg {
	display : block;
}

#post_wrap .post #post_file {
	display : none;
}


#post_wrap .post .profileimg_post {
	width : 50px;
	height : 50px;
	display : inline;
	border  : 1px solid rgba(0, 0, 0, .1);
	background : white;
	border-radius : 25px;
	vertical-align : middle;
	margin-right : 10px;
}

#post_wrap .post .profileimg_reply {
	background : white;
	border-radius : 18px;
	width : 35px;
	height : 35px;
	display : inline;
	border : 1px solid rgba(0, 0, 0, .1);
	vertical-align : top;
}

.post .replywrap {
	border-top : 1px solid #e1e2e3;
	margin-top : 2px;
	padding-top : 2px;
	font-size : 13px;
}

.post .replywrap input[type="file"] {
	display : none;
}

.post .reply {
	position : relative;
	margin-top : 7px;
	transition : opacity 0.5s linear;
}

.post .reply .reply_menu_btn {
	display : none;
	width : 15px;
	position : absolute;
	right : 0px;
	height : 15px;
	background-size : 15px 15px;
	background-repeat : no-repeat;
}

.post .reply:hover .reply_menu_btn {
	display : block;
}

.post .reply .reply_menu_btn:hover {
	cursor : pointer;
	display : block;
}

.post .replywrap .reply_more {
	//background : url('/img/replymore.png') no-repeat ;
	line-height : 11px;
	//padding-left : 13px;
	padding-bottom : 3px;
	margin-top : 6px;
	color : <%= color_hex %>;
	cursor : pointer;
	font-family : inherit;
	margin-bottom : 5px;
}

.post .reply .reply_text {
	font-size : 14px;
	display : inline-block;
	line-height : 16px;
	white-space : pre;
	word-wrap :  break-word;
	margin-left : 6px;
	width : 520px;
}


.post .reply .reply_text img {
	display : block;
	margin-top : 5px;
	max-width : 100%;
	max-height : 200px;
}

.post .replywrap .reply a {
	text-decoration : none;
	color : <%= color_hex %>;;
	font-weight : bold;
	font-family : inherit;
	margin-right : 5px;
}

.post .replywrap .reply a:hover {
	text-decoration : underline;
}

.post .replywrap .replyoutput {
	position : relative;
	text-align : right;
	border-top : 0px;
	display : none;
	margin-bottom : 10px;
}

.post .replywrap .replyoutput .delete_replyimg {
	display : inline-block;
	position : absolute;
	cursor : pointer;
	top : 1px;
	right : 1px;
	background : #000000 url('/img/delete_replyimg.png');
	opacity : 0.5;
	width : 60px;
	height : 60px;
	display : none;
}

.post .replywrap .replyoutput .replyoutput_img {
	display : inline-block;
	padding : 5px;
	border : 1px solid #c8c8c8;
	width : 50px;
	height : 50px;
	cursor : pointer;
}

.reply_menu {
	z-index : 200;
	background-color : white;
	display : none;
	border-radius : 3px;
	box-shadow : 0 3px 8px rgba(0,0,0,0.2);
	border : 1px solid rgba(0,0,0,0.15);
	position : absolute;
	right : 0px;
	top : 16px;
	padding : 8px;
}

.reply_menu div {
	padding : 8px;
}

.reply_menu div : hover {
	cursor : pointer;
	color : #ffffff;
	background-color : <%= color_hex %>;
}

.post_menu {
	background-color : white;
	display : none;
	border-radius : 3px;
	box-shadow : 0 3px 8px rgba(0,0,0,0.2);
	border : 1px solid rgba(0,0,0,0.15);
	position : absolute;
	right : 8px;
	padding-top : 8px;
	top : 30px;
	z-index : 200;
}
	
.post_menu div {
	padding : 8px;
	margin : 8px;
	margin-top : 0px;
}

.post_menu div:hover {
	cursor : pointer;
	color : #ffffff;
	background-color : <%= color_hex %>;
}

.post > #post_write_button {
	margin-right : 4px;
	margin-top : 8px;
	float : right;
	color : white;
	border-radius : 2px;
	box-sizing : border-box;
	text-align : center;
	line-height : 32px;
	background-color : <%= color_hex %>;
	font-size : 16px;
	width : 60px;
	height : 33px;
}
	
.post #post_none {
	padding-bottom : 10px;
	text-align : center;
	font-size : 14px;
}

.post .post_inside {
	padding : 9px 10px 8px 10px;
}

.post .textmore_btn {
	cursor : pointer;
	color : <%= color_hex %>;
	font-weight : bold;
	display : block;
	padding-top : 5px;
}

.post .textspan {
	word-wrap: break-word;
	overflow-y : hidden;
	max-height : 75px;
	display : block;
}

.post .post_inside a {
	text-decoration : none;
	color : black;
}

.post .post_inside > span > a:hover {
	color : <%= color_hex %>;
}

.post .post_inside .link_preview {
	display : block;
	margin-top : 10px;
	box-shadow : 0 0 0 1.5px rgba(0, 0, 0, .1) inset, 0 1px 1px rgba(0, 0, 0, .05);
	white-space : pre-line;
}

.post .post_inside .link_preview:visited {
	color : black;
}


.post .post_inside .link_preview .link_preview_img {
	margin : 0px;
}

.post .post_inside .link_preview .link_preview_img .link_preview_helper {
	display : none;
}
.post .post_inside .link_preview .link_preview_img_big .link_preview_helper {
	display : block;
	width : 100%;
	height : 3px;
	position : absolute;
	bottom : 0px;
	background-color : white;
}

.post .post_inside .link_preview_img {
	position : relative;
	display : inline-block;
	overflow : hidden;
}

.post .post_inside .link_preview_img img {
	max-width : 100%;
	max-height : 100%;
	transition : all .2s ease;
}

.post .post_inside .link_preview_img img:hover {
	transform : scale(1.1);
}

.post .post_inside .link_preview_img_big {
	width : 100%;
}

.post .post_inside .link_preview_img_small {
	vertical-align : top;
	background-color : #f2f2f2;
	height : 100%;
	width : 150px;
	height : 150px;
}

.post .post_inside .link_preview_img_small img {
	display : block;
	margin : auto;
}


.post .post_inside iframe {
	border : 0px;
	width : 100%;
	min-height : 35vh;
}

.post .post_inside .link_preview .link_preview_text_big {
	padding-bottom : 10px;
	margin-top : 0px;
}

.post .post_inside .link_preview_text_small {
	width : calc( 100% - 170px );
	display : inline-block;
}

.post .post_inside .link_preview .link_preview_text {
	display : inline-block;
	margin : 10px;
	margin-bottom : 0px;
	font-size : 17px;
}

.post .post_inside .link_preview_title {
	font-weight : bold;
	margin : 10px;
}

.post .post_inside .link_preview_description {
	font-size : 15px;
	margin : 10px;
}

.post .post_inside .link_preview_description span {
	color : #aaa;
	
}

.post .post_inside .link_preview_site_name {
	font-size : 13px;
}

.post .post_inside .output_change {
	width : 616px;
	white-space : nowrap;
	height : auto;
	overflow-x : hidden;
	overflow-y : hidden;
	margin-top : 16px;
}

.post .post_inside textarea {
	border-top : 1px solid rgba(0,0,0,0.2);
	border-bottom : 1px solid rgba(0,0,0,0.2);
	border-left : 0px;
	border-right : 0px;
	border-radius : 0px;
	overflow-y : hidden;
	display : block;
	font-size : 14px;
	width : 100%;
	height : 100px;
	vertical-align : top;
	padding-left : 3px;
	padding-top : 5px;
}

.post .post_inside textarea:focus {
	outline : none;
	border-top : 1px solid <%= color_hex %>;
	border-bottom : 1px solid <%= color_hex %>;
}

#post_wrap .post #post_write_button:hover {
	cursor : pointer;
}

#post_wrap .post .post_inside .post_change_file {
	display : none;
}

#post_wrap .post .post_inside .post_change_label {
	//margin-top : 13px;

	margin-right : 14px;
	width : 32px;
	height : 33px;
	float : right;
	background : url('/svg/imageupload.svg');
	background-size : 32px 33px;
}

#post_wrap .post .post_inside .post_change_label:hover {
	cursor : pointer;
}

#post_wrap .post .post_change_button {
	color : white;
	border-radius : 2px;
	box-sizing : border-box;
	text-align : center;
	line-height : 32px;
	background-color :  rgba(<%= color_r %>,<%= color_g %>,<%= color_b %>,.9);
	border-bottom : 2px solid rgba(<%= color_r %>,<%= color_g %>,<%= color_b %>,1);
	font-size : 16px;
	width : 60px;
	height : 33px;
	margin-right : -5px;
	float : right;
	cursor : pointer;
}

#post_wrap > .post > .post_span {
	color : <%= color_hex %>;
	font-size : 18px;
	cursor : pointer;
	font-weight : bold;
	font-family :  inherit;
	padding-left : 23px;
	margin-left : 7px;
	padding-bottom : 20px;
	background : url('/svg/postimg.svg') no-repeat;
	background-size : 22px 25px;
}

#post_wrap > .post > .post_span > img {
	display : inline;
}

#post_wrap > .post .post_changed {
	position : relative;
	font-size : 16px;
	color : #9197a3;
}
	
#post_wrap > .post .post_changed:before {
	content : " Â· ";
}

#post_wrap > .post .post_changed:hover {
	cursor : pointer;
}

#post_wrap > .post > .post_favorite {
	display : inline-block;
	vertical-align : middle;
	position : relative;
	background-image : url("/svg/star.svg");
	background-size : 100% 100%;
	margin-left : 7px;
	margin-top : -8px;
	width : 20px;
	height : 20px;
}

#post_wrap > .post > .post_favorite > img {
	position : absolute;
	top : -4px;
	left : 6px;
	width : 20px;
	height : 20px;
}

#bottom_btn {
	width : 100vw;
	padding : 10px 0 10px 0;
	box-shadow : -2px -2px 8px rgba(0,0,0,0.2);
	position : fixed;
	text-align : center;
	color : white;
	font-weight : bold;
	background-color : <%= color_hex %>;
	cursor : pointer;
	bottom : 0;
}

.dontsee_span {
	color : <$= color_hex %>;
	cursor : pointer;
}

.dontsee_btn {
	width : 16px;
	height : 16px;
	float : right;
	cursor : pointer;
	background-image : url('/img/remove_reply.png');
	background-size : 100% 100%;
}

@media screen and ( max-width : 669px ){
	html {
	}
	#body {
		width : calc( 100vw );
	}
	#post_wrap > .post .reply_text {
		width : calc( 100vw - 140px );
	}
	#post_wrap > .post .post {
		max-height : 100vw;
	}
	#post_wrap > .post .post_name {
		font-size : 18px;
	}
	#post_wrap > .post > .post_name > img {
		width : 40px;
		height : 40px;
		margin-right : 5px;
	}
	.post .post_share {
		margin-left : 48px;
	}
	#post_wrap > .post > .post_span {
		font-size : 16px;
		background-size : 18px 23px;
		margin-left : 5px;
		padding-left : 20px;
	}
}

@media screen and ( max-width : 500px ){
	#post_wrap > .post .post_name {
		font-size : 17px;
	}
	#post_wrap > .post > .replywrap > .reply > .reply_text > .date {
		font-size : 11px;
	}
	.post .post_inside .link_preview_img_small {
		vertical-align : auto;
		vertical-align : initial;
		width : calc(100%);
	}
	.post .post_inside .link_preview_img_small img:hover {
		transform : auto;
		transform : initial;
	}
	.post .post_inside .link_preview_text_small {
		width : auto;
		width : initial;
		display : auto;
		display : initial;
	}
	.post .post_inside .link_preview_text .link_preview_title {
		font-size : 13px;
	}
	.post .post_inside .link_preview_text .link_preview_description {
		font-size : 11px;
	}

	.post .post_inside iframe {
		min-height : auto;
		min-height : initial;
	}
}

@media screen and ( max-width : 422px ){
	#post_wrap > .post .post_name {
		font-size : 15px;
	}
	#post_wrap > .post > .replywrap > .reply > .reply_text > .date {
		font-size : 10px;
	}
}

