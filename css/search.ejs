<style>
#search_wrap {
	width : 100vw;
	height : 120px;
}

#search_container {
	position : fixed;
	z-index : 100;
	width : 100%;
	box-shadow : 0px 4px 8px rgba(0,0,0,.2);
	height : 120px;
	background-color : white;
}

#search_container_back {
	width : 100%;
	height : 70px;
	background-color : <%= color_hex %>;
	box-shadow : inset 0px 0px 1px 1px rgba(0,0,0,0.1);
	color : white;
}

#search_result_wrap {
	box-sizing : border-box;
	width : 650px;
}

#container_query {
	font-size : 30px;
	text-align : left;
	padding-left : 7px;
	margin : auto;
    max-width : 100vw;
	width : 1300px;
	line-height : 65px;
    box-sizing : border-box;
}

#search_tab {
    padding-bottom : 0px;
    background-color : white;
    font-size: 13px;
    box-sizing : border-box;
    letter-spacing: 0px;
    max-width : 100vw;
	margin : auto;
	width : 1300px;
    border : 0;
    text-align : left;
}


#search_tab > div {
    cursor : pointer;
    display : inline-block;
    width : 70px;
    text-align : center;
    text-decoration : none;
    box-sizing : initial;
    font-size : 17px;
    padding-top : 15px;
    height : 30px;
}

#search_tab > div:hover {
    color : <%= color_hex %>;
}

#search_tab > div::after {
    content: '';
    margin-top : 12px;
    display: block;
    width: 100%;
    height : 0px;
    background : <%= color_hex %>;
}

#search_tab > div:hover::after {
    margin-top : 7px;
    padding-bottom : 5px;
}

@media screen and ( max-width : 1300px ) {
    #search_wrap #search_container #search_tab, #container_query {
		width : 985px !important;
	}
}


</style>
