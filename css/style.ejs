html{
	width : 100%;
}

body{
	font-family : 'NanumGothic', "NanumGothicOTF","Nanum Gothic", "Apple SD Gothic Neo", "Malgun Gothic", sans-serif;
	margin : 0px;
	min-height : calc( 100vh - 42px);
	padding : 0px;
	overflow-x : hidden;
	width : 100vw;
	background-color : #f2f2f2;
}

textarea {
	resize : none;
}

#toast {
	position : absolute;
	bottom : 10vh;
	left : 15vw;
	padding : 2vh 0 2vh 0;
	width : 70vw;
	background-color : #313131;
	color : white;
	opacity : 0;
	text-align : center;
	border-radius : 3px;
}

#body {
	margin-top : 42px;
	text-align : center;
}

#body * {
	text-indent : 0;
}

#body > * {
	text-align : left;
	margin-top : 10px;
	display : inline-block;
	vertical-align : top;
	min-width : 300px;
}

#wrap_top {
	display : block;
	vertical-align : auto;
	vertical-align : initial;
	max-width : initial;
	max-width : auto;
	margin-top : 0;
	text-align : center;
}

#wrap_left {
	margin-right : 10px;
}

#wrap_right {
	margin-left : 10px;
}

#wrap_right #recommend_list {
	background-color : white;
	width : 310px;
	border-radius : 4px;
	border : 1px solid;
	border-color : #e5e6e9 #dfe0e4 #d0d1d5;
	padding : 15px;
	box-sizing : border-box;
}

#wrap_right #recommend_list #recommend_title {
	display : inline-block;
	font-size : 18px;
	color : #66757f;
}

#wrap_right #recommend_list .recommend_span {
	margin-left : 10px;
	font-size : 13px;
	color : <%= color_hex %>;
	cursor : pointer;
	text-decoration : none;
}

#wrap_right #recommend_list .recommend_span:hover {
	text-decoration : underline;
}

#wrap_right #recommend_list > div {
	margin-top : 7px;
}
#wrap_right #recommend_list div #recommend_img {
	width : 50px;
	height : 50px;
	display : inline-block;
	border : 1px solid rgba(0, 0, 0, .1);
	background-size : 100% 100%;
	background-color : white;
	border-radius : 25px;
	vertical-align : top;
	margin-right : 10px;
}

#wrap_right #recommend_list div .recommend_box {
	display : inline-block;
	vertical-align : top;
	width : 210px;
}

#wrap_right #recommend_list div .recommend_box > a {
    color : #000000;
    text-decoration : none;
	vertical-align : top;
    font-size : 16px;
    font-weight : bold;
}

#wrap_right #recommend_list div .recommend_box > a span {
	padding-left : 5px;
	color : #657786;
    font-weight : normal;
}

#wrap_right #recommend_list div .recommend_box .recommend_text {
	display : block;
	font-size : 14px;
}

#wrap_right #recommend_list div .recommend_box .recommend_text a {
	color : <%= color_hex %>;
	text-decoration : none;
}

#wrap_right #recommend_list div .recommend_box .recommend_text text a:hover {
	text-decoration : underline;
}

.user_follow_btn, .user_follow_btn_small {
	float : right;
	width : 78px;
	text-align : center !important;
	padding : 9px;
	background-color : white;
	border : 1px solid #e1e8ed;
	border-radius : 4px;
	color : #66757f;
	cursor : pointer;
	font-size : 14px;
	font-weight : bold;
	margin-top : 7px;
	margin-right : 7px;
}

.user_follow_btn_small {
	margin-top : 5px;
	padding : 5px;
	float : auto;
	float : initial;
}

.user_follow_btn:hover, .user_follow_btn_small:hover {
	text-decoration : none;
	background-color : #f5f5f5;
}

input[type=text], input[type=password], input[type=email], input[type=number] {
	-webkit-appearance : none;
	outline : none;
	border : 1px solid #ccc;
}

#profile_hover {
	z-index : 500;
	position : absolute;
	display : none;
	transition : opacity .1s ease-out;
}


@media screen and ( max-width : 1300px ) {
	#wrap_right {
		display : none;
	}
}

@media screen and ( max-width : 1000px ) {
	#wrap_left {
		display : none;
	}
}
</style>
