<style>
#setting_wrap {
	overflow-y : hidden;
	border-radius : 2px;
	width : 650px;
	box-sizing : border-box;
	max-width : 100vw;
	display : block;
	margin : auto;
}

#wrap_left #setting_tab {
	border-top : 1px solid #e5e6e9;
	border-radius : 4px;
}

#setting_tab > div {
	cursor : pointer;
	background-color : white;
	border : 1px solid #dfe0e4;
	border-color : #e5e6e9 #dfe0e4 #e5e6e9;
	border-top : 0px;
	padding : 12px;
	color : #66757f;
	font-size: 14px;
}

#wrap_mid #setting_tab > div {
	display : inline-block;
	width : 90px;
	box-sizing : border-box;
	text-align : center;
	border-top : 1px #e5e6e9 solid;
	border-bottom : 0px;
	border-right : 0px;
}

#wrap_mid #setting_tab > div:last-of-type {
	border-right : 1px #dfe0e4 solid;
}

#wrap_left #setting_tab > div:first-of-type {
	border-radius : 4px 4px 0 0;
}

#wrap_left #setting_tab > div:last-of-type {
	border-radius : 0px 0px 4px 4px;
}

#wrap_left #setting_tab > div:hover {
	cursor : pointer;
	background-color : #f6f6f6;
	color : <%= color_hex %>;
}

#setting_tab > .setting_tab_active {
	color : black;
	font-weight : bold;
}

#setting_box {
	border-radius : 0 0 4px 4px;
	background-color : white;
	border : 1px solid #e6ecf0;
}

#setting_title {
	border-bottom : 1px solid #e6ecf0;
	font-size : 22px;
	padding : 11px;
	margin-bottom : 15px;
}

.setting_label {
	cursor : pointer;
	display : inline-block;
	margin-left : 11px;
	width : 120px;
	text-align : right;
	font-size : 13px;
	vertical-align : top;
	padding-top : 6px;
}

.setting_div {
	margin-left : 15px;
	vertical-align : top;
	display : inline-block;
	position : relative;
}

.setting_input {
	display : block;
	width : 230px;
	padding : 6px;
	margin : 0;
	outline : 0;
	background-color : #fff;
	border : 1px solid #e6ecf0;
	border-radius : 3px;
	margin-bottom : 23px;
}

.setting_input[type="checkbox"]{
	display : inline-block;
	margin-bottom : 0px;
	margin-top : 8px;
	width : initial;
}

.setting_info {
	color : #657786;
	padding-left : 2px;
	font-size : 12px;
}

.setting_text {
	position : absolute;
	color : #657786;
	padding-left : 2px;
	font-size : 12px;
	bottom : 6px;
}

#setting_submit {
	width : 78px;
	text-align : center;
	padding : 9px;
	background-color : white;
	border : 1px solid #e1e8ed;
	border-radius : 4px;
	color : #66757f;
	cursor : pointer;
	font-size : 14px;
	font-weight : bold;
	margin : 0px 25px 15px auto;
}

.setting_submit:hover {
	text-decoration : none;
	background-color : #f5f5f5;
}



@media screen and ( max-width : 1000px ) {
	#setting_title {
		display : none;
	}
	#setting_box {
		padding-top : 30px;
	}
}
</style>
