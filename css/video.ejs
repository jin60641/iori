#body {
	display : none;
}

#video_wrap {
	margin-top : 42px;
}

#img_preview {
	overflow-x : auto;
	overflow-y : hidden;
	white-space : nowrap;
	display : block;
	margin-top : 20px;
	width : 100%;
	padding-left : 8px;
	box-sizing : border-box;
	height: 200px;
	border : 1px solid black;
}

.imgbox{
	cursor : pointer;
	padding : 3px;
	margin-top : 10px;
	border : 2px solid black;
	width : 170px;
	height : 170px;
	margin-left : 4px;
	margin-right : 5px;
	position : relative;
	display : inline-block;
	background-position : 50% 50%;
	background-size: cover;
	background-repeat : no-repeat;
}

.imgbox:hover .imgbox_delete{
	display : block;
}

